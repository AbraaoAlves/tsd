{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "tsd_repos_v2",
    "type": "array",
    "required": ["/"],
    "items": {
        "type": "object",
        "properties": {
            "required": ["name", "description", "versions"],
            "name": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "versions": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": ["author", "version", "key", "uri", "dependencies"],
                    "properties": {
                        "author": {
                            "type": "object",
                            "required": ["name", "url"],
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "url": {
                                    "type": "string"
                                }
                            }
                        },
                        "version": {
                            "type": "string"
                        },
                        "key": {
                            "type": "string"
                        },
                        "uri": {
                            "type": "object",
                            "required": ["sourceType", "source"],
                            "properties": {
                                "sourceType": {
                                    "type": "number"
                                },
                                "source": {
                                    "type": "string"
                                }
                            }
                        },
                        "dependencies": {
                            "type": "array"
                        }
                    }
                }
            }
        }
    }
}
