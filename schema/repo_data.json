{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "tsd_repo_data",
    "type": "object",
    "required": ["name", "description", "versions"],
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "versions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["author", "version", "url", "key", "dependencies"],
                "properties": {
                    "author": {
                        "type": "string"
                    },
                    "author_url": {
                        "type": "string"
                    },
                    "version": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    },
                    "key": {
                        "type": "string"
                    },
                    "dependencies": {
                        "type": "array",
                        "required": ["name", "version"],
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "version": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
