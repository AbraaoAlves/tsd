{
	"$schema": "http://json-schema.org/draft-04/schema",
	"id": "tsd-v4-dev-3",
	"description": "TSD - TypeScript Definition Package Manager: config file",
	"type": "object",
	"required": ["version", "repo", "ref", "typingsPath"],
	"properties": {
		"version": {
			"type": "string",
			"enum": ["v4"]
		},
		"repo": {
			"type": "string",
			"pattern": "^\\w(?:[_\\.-]*\\w+)*/\\w(?:[_\\.-]*\\w+)*$"
		},
		"ref": {
			"type": "string",
			"pattern": "^\\w(?:[_\\.-]*\\w+)*$"
		},
		"typingsPath": {
			"type": "string",
			"minLength": "1"
		},
		"installed": {
			"type": "object",
			"additionalProperties": false,
			"patternProperties": {
				"^\\w[\\w_\\.-]*?\\w/\\w[\\w_\\.-]*?\\w\\.d\\.ts$": {
					"type": "object",
					"required": ["commit", "blob"],
					"properties": {
						"commit": {
							"type": "string",
							"pattern": "^[0-9a-f]{40}$"
						},
						"blob": {
							"type": "string",
							"pattern": "^[0-9a-f]{40}$"
						}
					}
				}
			}
		}
	}
}