{
	"$schema": "http://json-schema.org/draft-04/schema",
	"id": "tsd_config_v4-dev-0",
	"description": "TSD - TypeScript Definition Package Manager: config file",
	"type": "object",
	"required": ["version", "repo", "ref", "typingsPath"],
	"properties": {
		"version": {
			"type": "string",
			"enum": ["v4"]
		},
		"repo": {
			"type": "string",
			"pattern": "^\\w[\\w_-]+?\\w/\\w[\\w_-]+?\\w$"
		},
		"ref": {
			"type": "string",
			"pattern": "^\\w[\\w_\\.-]+?\\w$"
		},
		"typingsPath": {
			"type": "string",
			"minLength": "1"
		},
		"installed": {
			"type": "object",
			"additionalProperties": false,
			"patternProperties": {
				"^\\w[\\w_\\.-]+?\\w/\\w[\\w_\\.-]+?\\w\\.d\\.ts$": {
					"type": "object",
					"required": ["commit", "hash"],
					"properties": {
						"commit": {
							"type": "string",
							"pattern": "^[0-9a-f]{40}$"
						},
						"hash": {
							"type": "string",
							"pattern": "^[0-9a-f]{32}$"
						}
					}
				}
			}
		}
	}
}