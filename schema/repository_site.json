{
    "$schema": "http://json-schema.org/draft-03/schema",
    "id": "tsd_repository_site",
    "type": "array",
    "items": {
        "type": "object",
        "required": ["name", "description", "url", "version", "author", "key", "dependencies"],
        "properties": {
            "name": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "url": {
                "type": "string"
            },
            "version": {
                "type": "string"
            },
            "author": {
                "type": "string"
            },
            "author_url": {
                "type": "string"
            },
            "key": {
                "type": "string"
            },
            "dependencies": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": ["name", "version"],
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
